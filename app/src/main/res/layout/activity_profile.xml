<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_profile.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/profileAvatar"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile avatar"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvName"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="State, District, Village"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvLandSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Total Land Size"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvSoilType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Soil Type"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvPrimaryCrops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Primary Crops"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Language Preference"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:spacing="12dp">

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:backgroundTint="@color/primary_green"
                android:text="Edit Profile"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="#1A1A1A"
                android:textSize="15sp"
                android:textStyle="bold"
                android:elevation="4dp"
                app:cornerRadius="12dp"
                android:stateListAnimator="@null"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Logout"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="#1A1A1A"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/primary_green"
                android:textSize="15sp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:stateListAnimator="@null"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
