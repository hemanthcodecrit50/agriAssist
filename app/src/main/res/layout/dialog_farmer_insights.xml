<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="#1A1A1A"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/primary_green"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_lightbulb"
                app:tint="@color/primary_green"
                android:contentDescription="Insights icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="AI-Generated Insights"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2A2A2A"
            android:layout_marginBottom="16dp" />

        <!-- Insights Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="400dp">

            <TextView
                android:id="@+id/insightsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading insights..."
                android:textColor="#E0E0E0"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:padding="8dp" />
        </ScrollView>

        <!-- Info Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="ðŸ’¡ These insights are automatically generated based on your questions and farming activities"
            android:textColor="#9CA3AF"
            android:textSize="13sp"
            android:gravity="center" />

        <!-- Close Button -->
        <Button
            android:id="@+id/closeButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Close"
            android:textColor="#1A1A1A"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary_green"
            app:cornerRadius="12dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

